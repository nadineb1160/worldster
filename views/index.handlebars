<div class="m-2">
    <img src="https://cdn.pixabay.com/photo/2016/04/13/17/17/oyster-1327311__340.jpg" class="rounded float-right m-1"
        alt="Responsive image">
    <div class="jumbotron">
        <h1 class="display-4">Worldster</h1>
        <h2 class="lead">The World is your Oyster!</h2>
        <hr class="my-4">

        <h2>Add a Country</h2>
        <form class="create-form form-inline">

            <div class="form-group mr-2">
                <label class="mr-2" for="country">Country:</label>
                <input type="text" name="country_name" id="country">
            </div>
            
            <div class="form-group mr-2">
                <label class="mr-2" for="visited">Visited?</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" name="visited" type="radio" id="inlineCheckbox1" value="1" checked>
                    <label class="form-check-label" for="visited">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" name="visited" type="radio" id="inlineCheckbox2" value="0">
                    <label class="form-check-label" for="visited">Not Yet</label>
                </div>
            </div>

            <button type="submit btn btn-primary btn-lg">Add Country</button>

        </form>
    </div>

</div>


<div class="container-md">
    <div class="row">
        <div class="col bg-info m-2">
            <h2>Places visted:</h2>

            <ul class="list-group list-group-flush">
                {{#each country}}
                    {{#if visited}}
                        {{> country/country-block newVisited=false}}
                    {{/if}}
                {{/each}}
            </ul>       
        </div>

        <div class="col bg-warning m-2">
            <h2>Places to see:</h2>

            <ul class="list-group list-group-flush">
                {{#each country}}
                    {{#unless visited}}
                        {{> country/country-block newVisited=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>  
    </div>

</div>